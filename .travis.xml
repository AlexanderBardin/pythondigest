language: python

python:
  - 3.4

env:
  - DJANGO=1.8.4

before_install:
  - export DJANGO_SETTINGS_MODULE=conf.settings
  - export PYTHONPATH=$HOME/builds/pythondigest/pythondigest
  - export PIP_USE_MIRRORS=true

install:
  - pip install -r requirements.txt
  - pip install django==$DJANGO --quiet --use-mirrors
  - pip install coverage

branches:
 only:
  - master

script: coverage run manage.py test

after_success:
  - coverage report
  - pip install --quiet python-coveralls
  - coveralls